<?xml version="1.0" encoding="utf-8"?>
<com.woxthebox.draglistview.swipe.ListSwipeItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:leftViewId="@+id/item_left"
    app:rightViewId="@+id/item_right"
    app:swipeViewId="@+id/item_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/musicArtistRank"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <ImageView
            android:id="@+id/musicArtistImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ye" />

        <TextView
            android:id="@+id/musicArtistName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingEnd="10dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="Kanye West"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>

</com.woxthebox.draglistview.swipe.ListSwipeItem>
